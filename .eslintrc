{
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "plugins": [
    "only-warn"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  },
  "settings": {
    "react": {
      "version": "16.5"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "wp": true,
    "jQuery": true
  },
  "rules": {
    "no-unused-vars": [
      2,
      {
        "varsIgnorePattern": "(^createElement$)"
      }
    ],
    "comma-dangle": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
  }
}
